<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Update Booking"
        android:textAlignment="center"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/cus_name"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:ems="10"
        android:hint="Customer Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/cus_phone"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:ems="10"
        android:hint="Contact No"
        android:inputType="phone" />

    <EditText
        android:id="@+id/cus_budget"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:ems="10"
        android:hint="Budget"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/cus_people"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="No of People"
        android:inputType="textPersonName" />



    <EditText
        android:id="@+id/cus_checkin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Checck in"
        android:inputType="date" />

    <EditText
        android:id="@+id/cus_checkout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="220dp"
        android:layout_marginTop="-40dp"
        android:ems="10"
        android:hint="Check out"
        android:inputType="date" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="340dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/button_background"
        android:text="Update Booking"

        android:textColor="#FFFFFF" />


</LinearLayout>