<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Booking">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="408dp"
        android:layout_height="736dp"
        android:layout_marginStart="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/beach_background4"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_marginHorizontal="320dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Booking"
                android:textAlignment="center"
                android:textColor="#F5F8FB"
                android:textSize="36sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="336dp"
            android:layout_height="58dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="10dp"
            android:text="Booking Details"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/cusName"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:ems="10"
            android:hint="Customer Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:ems="10"
            android:hint="Contact No"
            android:inputType="phone" />
        <EditText
            android:id="@+id/location"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:ems="10"
            android:hint="Location"
            android:inputType="textCapCharacters" />



        <CheckBox
            android:id="@+id/ac"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:text="Ac"
            />

        <CheckBox
            android:id="@+id/nonac"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="240dp"
            android:layout_marginTop="-30dp"
            android:ems="10"

            android:text="Non Ac" />

        <EditText
            android:id="@+id/checkin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Checck in"
            android:inputType="date" />

        <EditText
            android:id="@+id/checkout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="230dp"
            android:layout_marginTop="-40dp"
            android:ems="10"
            android:hint="Check out"
            android:inputType="date" />

        <Button
            android:id="@+id/showdetail"
            android:layout_width="340dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="50dp"
            android:background="@drawable/button_background"
            android:text="Show Details"
            android:textColor="#FFFFFF" />


    </LinearLayout>

</LinearLayout>